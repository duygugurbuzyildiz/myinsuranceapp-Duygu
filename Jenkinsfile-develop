pipeline {
    agent any
    
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'develop',url: 'https://github.com/duygugurbuzyildiz/myinsuranceapp-Duygu.git'
	        }
        }        
        stage('Requirements') {
            steps {
                echo 'Installing dependencies...'
                sh 'pip3 install -r requirements.txt'
                sh 'python3 project/init/init_db.py'
            }
        }
        stage('Unit/Integration tests') {
           steps {
                echo 'Unit/Integration...'
                sh 'python3 -m unittest discover -s tests/unit -v'
            }
        stage('Acceptance tests') {
           steps {
                echo 'Acceptance test...'
            }
        }
        stage('Create image') {
            steps {
                echo 'creating image...'
                sh 'docker build -t hackathonimages.azurecr.io/myinsuranceappduygu:v8 -f Dockerfile .'
            }
        } 
        stage('Publish image') {
            steps {
                echo 'pushing image...'
                withDockerRegistry([ credentialsId: "acr-credentials-hackaton", url: "http://hackathonimages.azurecr.io"]) {
                    sh 'docker push hackathonimages.azurecr.io/myinsuranceappduygu:v8'
                }
            }
        }
    }
    post {
        always {
            echo 'post do this always...'
        }
        success{
            echo 'post do this when success...'
        }
        failure {
            echo 'post do this when failure...'
        }
        cleanup{
            echo 'post do this when cleanup...'
            deleteDir()
        }
    }
}